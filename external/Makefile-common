#Common Makefile format
#Author: Peter Radloff

ifeq ($(wildcard $(ROOTSYS)/etc/Makefile.arch),) 
    include $(ROOTSYS)/Makefile.arch 
else
    include $(ROOTSYS)/etc/Makefile.arch 
endif

ROOTBIN := $(shell root-config --bindir)
ROOTLIB := $(shell root-config --libdir)
ROOTINC := $(shell root-config --incdir)

# -------------------------------------------------------------
# General flags
# -------------------------------------------------------------

OUTPUTDIR  = ../StandAlone

#CXXFLAGS:=-DROOTCORE="ANALYSIS" -fPIC
CXXFLAGS:=-fPIC

# add utils subdirectories if needed
INCLUDES   += -I.. -I${ROOTINC}

# Need these to avoid loading dependent libraries when ROOT starts
LINKLIBS = $(shell root-config --libs)

# Add dependent packages
ifneq ($(strip $(PACKAGE_DEP)),)
INCLUDES   += $(addprefix -I../../,$(PACKAGE_DEP))
LINKLIBS   += $(foreach PACKAGE,$(PACKAGE_DEP),$(addprefix ../../$(PACKAGE)/,StandAlone/lib$(PACKAGE).so))
endif
# -------------------------------------------------------------
# ROOT Cint
# -------------------------------------------------------------
CINT       = MakeCint
LDEFFILE   = ../Root/LinkDef.h
CINTFILE   = $(OUTPUTDIR)/$(PACKAGE)Cint.cxx
CINTOBJ    = $(patsubst %.cxx,%.o,$(CINTFILE))

# -------------------------------------------------------------
# ProofAna source
# -------------------------------------------------------------
# add util subdirectories if needed
TEMPCXX    = $(wildcard ../Root/*.cxx)
CXXLIST = $(TEMPCXX) $(CINTFILE)
HLIST   = $(patsubst ../Root/%,../$(PACKAGE)/%,$(patsubst %.cxx,%.h,$(TEMPCXX)))
OLIST   = $(patsubst %.cxx,%.o,$(CXXLIST))
DLIST   = $(patsubst %.h,%.d,$(HLIST))


# -------------------------------------------------------------
# Libraries
# -------------------------------------------------------------
LIBFILE  = $(OUTPUTDIR)/lib$(PACKAGE).so

ifeq ($(PLATFORM),macosx)
EXTRALDFLAGS = -install_name $(LIBFILE)
endif

# get libraries of ROOT
define ldlinksuffixROOT
   $(addsuffix $(LDLINKSUFFIX),$(Lib)) $(shell if [ "$(findstring -Ldlink2,$(OPTIONS))" ]; then echo $(addsuffix _pkgid_$(ROOTVER),$(Lib)); fi)
endef

# -------------------------------------------------------------
# Compilation
# -------------------------------------------------------------

default: shlib

# Implicit rule to compile all classes
%.o : %.cxx
	@echo "Compiling $<"
	$(CXX) -MD $(CXXFLAGS) $(INCLUDES) -c $< -o $*.o 

# Rule to make ROOTCINT output file
$(CINTOBJ) : $(HLIST) $(LDEFFILE)
	@mkdir -p $(OUTPUTDIR)
	@echo "Running rootcint"
	$(ROOTBIN)/rootcint -v -f $(CINTFILE) -c -v -p $(CXXFLAGS) $(INCLUDES) $(HLIST) $(LDEFFILE)
	@echo "Compiling $(CINTFILE)"
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c $(CINTFILE) -o $@

rootcint : $(HLIST) $(LDEFFILE)
	@echo "Running rootcint"
	$(ROOTBIN)/rootcint -f $(CINTFILE) -c -v -p $(CXXFLAGS) $(INCLUDES) $(HLIST) $(LDEFFILE)

# Rule to combine objects into a shared library
$(LIBFILE): $(OLIST)
	@echo "Linking $(LIBFILE)"
	@rm -f $(LIBFILE)
	@$(LD) $(OLIST) $(CXXFLAGS) $(SOFLAGS) $(LINKLIBS) $(EXTRALDFLAGS) -o $(LIBFILE) 

-include $(DLIST)

MakeCint: $(CINTOBJ)
shlib: $(LIBFILE)

clean:
	@rm -f ../*/*.o ../*/*.d
	@rm -rf $(OUTPUTDIR)
